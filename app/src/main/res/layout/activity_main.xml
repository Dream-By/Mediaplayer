<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageButton
            android:id="@+id/btnPlay"
            android:layout_width="100dp"
            android:layout_height="40dp"

            android:src="@drawable/ic_play"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:scaleType="centerCrop"
            app:layout_constraintHorizontal_bias="0.655" app:layout_constraintVertical_bias="0.499"/>
    <ImageButton
            android:id="@+id/btnPause"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_pause" android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnPlay" app:layout_constraintHorizontal_bias="1.0"/>
    <SeekBar
            android:layout_width="197dp"
            android:layout_height="4dp" android:id="@+id/seekBar"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnPlay" android:layout_marginBottom="36dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>